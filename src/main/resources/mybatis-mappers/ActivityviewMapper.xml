<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boot.security.server.dao.ActivityviewDao">

	<sql id="where">
		<where>
			<if test="params.Id != null and params.Id != ''">
				and Id = #{params.Id} 
			</if>
			<if test="params.CinemaCode != null and params.CinemaCode != ''">
				and (CinemaCode = #{params.CinemaCode} or find_in_set(CinemaCode,#{params.CinemaCode}))
			</if>
			<if test="params.Title != null and params.Title != ''">
				and Title = #{params.Title} 
			</if>
			<if test="params.Image != null and params.Image != ''">
				and Image = #{params.Image} 
			</if>
			<if test="params.ActivityContent != null and params.ActivityContent != ''">
				and ActivityContent = #{params.ActivityContent} 
			</if>
			<if test="params.StartDate != null and params.StartDate != ''">
				and StartDate = #{params.StartDate} 
			</if>
			<if test="params.EndDate != null and params.EndDate != ''">
				and EndDate = #{params.EndDate} 
			</if>
			<if test="params.LinkUrl != null and params.LinkUrl != ''">
				and LinkUrl = #{params.LinkUrl} 
			</if>
			<if test="params.GradeCode != null and params.GradeCode != ''">
				and GradeCode = #{params.GradeCode} 
			</if>
			<if test="params.ActivitySequence != null and params.ActivitySequence != ''">
				and ActivitySequence = #{params.ActivitySequence} 
			</if>
			<if test="params.Status != null and params.Status != ''">
				and Status = #{params.Status} 
			</if>
			<if test="params.LinkName != null and params.LinkName != ''">
				and LinkName = #{params.LinkName} 
			</if>
		
		</where>
	</sql>

	<select id="count" resultType="int">
		select count(1) from activityview t
		<include refid="where" />
	</select>

	<select id="list" resultType="Activityview">
		select * from activityview t
		<include refid="where" />
		${params.orderBy}
		limit #{offset}, #{limit}
	</select>

	<update id="update">
		update activityview t
		<set>
			<if test="Id != null">
				Id = #{Id}, 
			</if>
			<if test="CinemaCode != null">
				CinemaCode = #{CinemaCode}, 
			</if>
			<if test="Title != null">
				Title = #{Title}, 
			</if>
			<if test="Image != null">
				Image = #{Image}, 
			</if>
			<if test="ActivityContent != null">
				ActivityContent = #{ActivityContent}, 
			</if>
			<if test="StartDate != null">
				StartDate = #{StartDate}, 
			</if>
			<if test="EndDate != null">
				EndDate = #{EndDate}, 
			</if>
			<if test="LinkUrl != null">
				LinkUrl = #{LinkUrl}, 
			</if>
			<if test="GradeCode != null">
				GradeCode = #{GradeCode}, 
			</if>
			<if test="ActivitySequence != null">
				ActivitySequence = #{ActivitySequence}, 
			</if>
			<if test="Status != null">
				Status = #{Status}, 
			</if>
			<if test="LinkName != null">
				LinkName = #{LinkName}, 
			</if>

		</set>

		where t.id = #{id}
	</update>

</mapper>
