<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boot.security.server.dao.SessioninfoviewDao">

	<sql id="where">
		<where>
			<if test="params.Id != null and params.Id != ''">
				and Id = #{params.Id} 
			</if>
			<if test="params.CCode != null and params.CCode != ''">
				and CinemaCode = #{params.CCode} 
			</if>
			<if test="params.Name != null and params.Name != ''">
				and CinemaName = #{params.Name} 
			</if>
			<if test="params.Company != null and params.Company != ''">
				and Company = #{params.Company} 
			</if>
			<if test="params.FilmName != null and params.FilmName != ''">
				and FilmName like concat('%', #{params.FilmName}, '%')  
			</if>
			<if test="params.StartTime != null and params.StartTime != ''">
				and StartTime like concat('%', #{params.StartTime}, '%') 
			</if>
			
		</where>
	</sql>

	<select id="count" resultType="int">
		select count(1) from (SELECT * FROM sessioninfoview <include refid="whereByroleId" />) t
		<include refid="where" />
	</select>

	<select id="list" resultType="Sessioninfoview">
		SELECT * FROM (SELECT * FROM sessioninfoview <include refid="whereByroleId" />)t
		<include refid="where" />
		${params.orderBy} 
		limit #{offset}, #{limit}
	</select>
	
	<sql id="whereByroleId">
		<where>
			<if test="params.roleId != 1 ">
				CinemaCode in (select CinemaCode from sys_user sy,(select id from sys_user where username = #{params.username})s
											where  sy.username = #{params.username}  or  sy.createUserId = s.id) 
			</if>
		</where>
	</sql>
			
	<update id="update">
		update sessioninfoview t
		<set>
			<if test="Id != null">
				Id = #{Id}, 
			</if>
			<if test="SCode != null">
				SCode = #{SCode}, 
			</if>
			<if test="CCode != null">
				CCode = #{CCode}, 
			</if>
			<if test="ScreenCode != null">
				ScreenCode = #{ScreenCode}, 
			</if>
			<if test="Name != null">
				Name = #{Name}, 
			</if>
			<if test="Company != null">
				Company = #{Company}, 
			</if>
			<if test="FilmCode != null">
				FilmCode = #{FilmCode}, 
			</if>
			<if test="FilmName != null">
				FilmName = #{FilmName}, 
			</if>
			<if test="SName != null">
				SName = #{SName}, 
			</if>
			<if test="StartTime != null">
				StartTime = #{StartTime}, 
			</if>
			<if test="Duration != null">
				Duration = #{Duration}, 
			</if>
			<if test="Language != null">
				Language = #{Language}, 
			</if>
			<if test="StandardPrice != null">
				StandardPrice = #{StandardPrice}, 
			</if>
			<if test="LowestPrice != null">
				LowestPrice = #{LowestPrice}, 
			</if>
			<if test="Price != null">
				Price = #{Price}, 
			</if>

		</set>

		where t.id = #{id}
	</update>
	

</mapper>
