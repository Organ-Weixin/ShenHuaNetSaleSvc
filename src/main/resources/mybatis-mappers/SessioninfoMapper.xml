<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boot.security.server.dao.SessioninfoDao">
	<resultMap type="Sessioninfo" id="Films">
		<result property="Id" column="Id"/>
		<result property="CCode" column="CCode"/>
		<result property="FilmCode" column="FilmCode"/>
		<result property="FilmName" column="FilmName"/>
		<result property="Duration" column="Duration"/>
		<result property="Language" column="Language"/>
		<association property="FileInfo" javaType="FileInfo">
			<result property="Id" column="Id"/>
			<result property="FilmCode" column="FilmCode"/>
			<result property="FilmName" column="FilmName"/>
		</association>
	</resultMap>
	<sql id="where">
		<where>
			<if test="params.Id != null and params.Id != ''">
				and s.Id = #{params.Id} 
			</if>
			<if test="params.CCode != null and params.CCode != ''">
				and s.CCode = #{params.CCode} 
			</if>
			<if test="params.Company != null and params.Company != ''">
				and u.Company = #{params.Company} 
			</if>
			<if test="params.StartTime !=null and params.StartTime != ''">
				and s.StartTime >= #{params.StartTime}
			</if>
			<if test="params.EndTime !=null and params.EndTime != ''">
				and #{params.EndTime} >= s.EndTime  
			</if>
		</where>
	</sql>

	<select id="count" resultType="int">
		select count(1) from filminfo f left join sessioninfo s 
		on f.FilmCode = s.FilmCode
		<include refid="where" />
	</select>

	<select id="getFilms" resultMap="Films">
		select f.id,s.* from filminfo f left join sessioninfo s 
		on f.FilmCode = s.FilmCode
		<include refid="where" />
		group by f.FilmCode
		${params.orderBy}
		limit #{offset}, #{limit}
	</select>

	<select id="countSession" resultType="int">
		select count(1) 
		from sessioninfo s 
		left join cinema c on s.CCode=c.code 
		left join screeninfo sc on s.CCode=sc.CCode and s.ScreenCode=sc.SCode
		left join userinfo u on s.UserID=u.Id
		left join priceplan p on p.CinemaCode=s.CCode and p.UserID=u.Id and (p.Code=s.FilmCode or p.Code=s.SCode)  
		<include refid="where" />
	</select>

	<select id="list" resultMap="BaseResultMap">
		select s.SCode,s.Id,s.CCode,s.ScreenCode,c.Name,u.Company,s.FilmCode,s.FilmName,sc.SName,s.StartTime,s.Duration,s.Language,s.StandardPrice,s.LowestPrice,p.Price  
		from sessioninfo s 
		left join cinema c on s.CCode=c.code 
		left join screeninfo sc on s.CCode=sc.CCode and s.ScreenCode=sc.SCode
		left join userinfo u on s.UserID=u.Id
		left join priceplan p on p.CinemaCode=s.CCode and p.UserID=u.Id and (p.Code=s.FilmCode or p.Code=s.SCode) 
		<include refid="where" />
		${params.orderBy}
		limit #{offset}, #{limit}
	</select>
	<resultMap id="BaseResultMap" type="com.boot.security.server.model.Sessioninfo">
		<id  property="Id" column="Id"/>
		<result property="CCode" column="CCode" />
		<result property="SCode" column="SCode" />
		<result property="ScreenCode" column="ScreenCode" />
		<result property="FilmCode" column="FilmCode" />
		<result property="FilmName" column="FilmName" />
		<result property="StartTime"  column="StartTime"/>
		<result property="Duration" column="Duration"/>
		<result property="Language"  column="Language"/>
		<result property="StandardPrice"  column="StandardPrice"/>
		<result property="LowestPrice"  column="LowestPrice"/>
		<association property="cinema" javaType="Cinema">
			<result property="code" column="CCode" />
			<result property="Name" column="Name" />
		</association>
		<association property="screeninfo" javaType="Screeninfo">
			<result property="CCode" column="CCode" />
			<result property="SName" column="SName" />
		</association>
		<association property="priceplan" javaType="Priceplan">
			<result property="CinemaCode" column="CCode" />
			<result property="Price" column="Price" />
		</association>
		<association property="userinfo" javaType="Userinfo">
			<result property="id" column="UserID" />
			<result property="Company" column="Company" />
		</association>
		
	</resultMap>
	
	<update id="updatePriceplan" parameterType="com.boot.security.server.model.Priceplan" >
		update pricePlan p set Price = #{Price}
		where CinemaCode=#{CinemaCode} and Code=#{Code} and UserID=#{UserID}
		
	</update>
	
	<update id="update">
		update sessioninfo t
		<set>
			<if test="Id != null">
				Id = #{Id}, 
			</if>
			<if test="CCode != null">
				CCode = #{CCode}, 
			</if>
			<if test="SCode != null">
				SCode = #{SCode}, 
			</if>
			<if test="ScreenCode != null">
				ScreenCode = #{ScreenCode}, 
			</if>
			<if test="StartTime != null">
				StartTime = #{StartTime}, 
			</if>
			<if test="FilmCode != null">
				FilmCode = #{FilmCode}, 
			</if>
			<if test="FilmName != null">
				FilmName = #{FilmName}, 
			</if>
			<if test="Duration != null">
				Duration = #{Duration}, 
			</if>
			<if test="Language != null">
				Language = #{Language}, 
			</if>
			<if test="UpdateTime != null">
				UpdateTime = #{UpdateTime}, 
			</if>
			<if test="StandardPrice != null">
				StandardPrice = #{StandardPrice}, 
			</if>
			<if test="LowestPrice != null">
				LowestPrice = #{LowestPrice}, 
			</if>
			<if test="SettlePrice != null">
				SettlePrice = #{SettlePrice}, 
			</if>
			<if test="TicketFee != null">
				TicketFee = #{TicketFee}, 
			</if>
			<if test="IsAvalible != null">
				IsAvalible = #{IsAvalible}, 
			</if>
			<if test="PlaythroughFlag != null">
				PlaythroughFlag = #{PlaythroughFlag}, 
			</if>
			<if test="Dimensional != null">
				Dimensional = #{Dimensional}, 
			</if>
			<if test="Sequence != null">
				Sequence = #{Sequence}, 
			</if>
			<if test="UserID != null">
				UserID = #{UserID}, 
			</if>
			<if test="ListingPrice != null">
				ListingPrice = #{ListingPrice}, 
			</if>
			<if test="FeatureNo != null">
				FeatureNo = #{FeatureNo}, 
			</if>
			<if test="SessionId != null">
				SessionId = #{SessionId}, 
			</if>
			<if test="SessionKey != null">
				SessionKey = #{SessionKey}, 
			</if>
			<if test="InternalUpdateTime != null">
				InternalUpdateTime = #{InternalUpdateTime}, 
			</if>

		</set>

		where t.id = #{id}
	</update>

</mapper>
