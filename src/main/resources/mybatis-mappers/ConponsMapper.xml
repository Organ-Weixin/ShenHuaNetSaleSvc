<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boot.security.server.dao.ConponsDao">

	<sql id="where">
		<where>
			<if test="params.Id != null and params.Id != ''">
				and Id = #{params.Id} 
			</if>
			<if test="params.TypeCode != null and params.TypeCode != ''">
				and TypeCode = #{params.TypeCode} 
			</if>
			<if test="params.TypeName != null and params.TypeName != ''">
				and TypeName = #{params.TypeName} 
			</if>
			<if test="params.CinemaCode != null and params.CinemaCode != ''">
				and CinemaCode = #{params.CinemaCode} 
			</if>
			<if test="params.GroupCode != null and params.GroupCode != ''">
				and GroupCode = #{params.GroupCode} 
			</if>
			<if test="params.OpenID != null and params.OpenID != ''">
				and OpenID = #{params.OpenID} 
			</if>
			<if test="params.Price != null and params.Price != ''">
				and Price = #{params.Price} 
			</if>
			<if test="params.ConponCode != null and params.ConponCode != ''">
				and ConponCode = #{params.ConponCode} 
			</if>
			<if test="params.SnackCode != null and params.SnackCode != ''">
				and SnackCode = #{params.SnackCode} 
			</if>
