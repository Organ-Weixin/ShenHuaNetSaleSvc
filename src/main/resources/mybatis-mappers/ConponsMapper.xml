				and ValidityDate = #{params.ValidityDate} 
			</if>
			<if test="params.ReceivedDate != null and params.ReceivedDate != ''">
				and ReceivedDate = #{params.ReceivedDate} 
			</if>
			<if test="params.Status != null and params.Status != ''">
				and Status = #{params.Status} 
			</if>
			<if test="params.UseDate != null and params.UseDate != ''">
				and UseDate = #{params.UseDate} 
			</if>
			<if test="params.Created != null and params.Created != ''">
				and Created = #{params.Created} 
			</if>
			<if test="params.Updated != null and params.Updated != ''">
				and Updated = #{params.Updated} 
			</if>
			<if test="params.Deleted != null and params.Deleted != ''">
				and Deleted = #{params.Deleted} 
			</if>
			<if test="params.Title != null and params.Title != ''">
				and Title = #{params.Title} 
			</if>
			<if test="params.Remark != null and params.Remark != ''">
				and Remark = #{params.Remark} 
			</if>
		
		</where>
	</sql>

	<select id="count" resultType="int">
		select count(1) from conpons t
		<include refid="where" />
	</select>

	<select id="list" resultType="Conpons">
		select * from conpons t
		<include refid="where" />
		${params.orderBy}
		limit #{offset}, #{limit}
	</select>

	<update id="update">
		update conpons t
		<set>
			<if test="Id != null">
				Id = #{Id}, 
			</if>
			<if test="TypeCode != null">
				TypeCode = #{TypeCode}, 
			</if>
			<if test="TypeName != null">
				TypeName = #{TypeName}, 
			</if>
			<if test="CinemaCode != null">
				CinemaCode = #{CinemaCode}, 
			</if>
			<if test="GroupCode != null">
				GroupCode = #{GroupCode}, 
			</if>
			<if test="OpenID != null">
				OpenID = #{OpenID}, 
			</if>
			<if test="Price != null">
				Price = #{Price}, 
			</if>
			<if test="ConponCode != null">
				ConponCode = #{ConponCode}, 
			</if>
			<if test="SnackCode != null">
				SnackCode = #{SnackCode}, 
			</if>
			<if test="ValidityDate != null">
				ValidityDate = #{ValidityDate}, 
			</if>
			<if test="ReceivedDate != null">
				ReceivedDate = #{ReceivedDate}, 
			</if>
			<if test="Status != null">
				Status = #{Status}, 
			</if>
			<if test="UseDate != null">
				UseDate = #{UseDate}, 
			</if>
			<if test="Created != null">
				Created = #{Created}, 
			</if>
			<if test="Updated != null">
				Updated = #{Updated}, 
			</if>
			<if test="Deleted != null">
				Deleted = #{Deleted}, 
			</if>
			<if test="Title != null">
				Title = #{Title}, 
			</if>
			<if test="Remark != null">
				Remark = #{Remark}, 
			</if>

		</set>

		where t.id = #{id}
	</update>

</mapper>
