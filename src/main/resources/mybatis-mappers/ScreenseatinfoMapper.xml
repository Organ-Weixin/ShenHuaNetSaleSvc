<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boot.security.server.dao.ScreenseatinfoDao">

	<sql id="where">
		<where>
			<if test="params.Id != null and params.Id != ''">
				and Id = #{params.Id} 
			</if>
			<if test="params.CinemaCode != null and params.CinemaCode != ''">
				and CinemaCode = #{params.CinemaCode} 
			</if>
			<if test="params.ScreenCode != null and params.ScreenCode != ''">
				and ScreenCode = #{params.ScreenCode} 
			</if>
			<if test="params.SeatCode != null and params.SeatCode != ''">
				and SeatCode = #{params.SeatCode} 
			</if>
			<if test="params.GroupCode != null and params.GroupCode != ''">
				and GroupCode = #{params.GroupCode} 
			</if>
			<if test="params.RowNum != null and params.RowNum != ''">
				and RowNum = #{params.RowNum} 
			</if>
			<if test="params.ColumnNum != null and params.ColumnNum != ''">
				and ColumnNum = #{params.ColumnNum} 
			</if>
			<if test="params.XCoord != null and params.XCoord != ''">
				and XCoord = #{params.XCoord} 
			</if>
			<if test="params.YCoord != null and params.YCoord != ''">
				and YCoord = #{params.YCoord} 
			</if>
			<if test="params.Status != null and params.Status != ''">
				and Status = #{params.Status} 
			</if>
			<if test="params.LoveFlag != null and params.LoveFlag != ''">
				and LoveFlag = #{params.LoveFlag} 
			</if>
			<if test="params.Type != null and params.Type != ''">
				and Type = #{params.Type} 
			</if>
			<if test="params.UpdateTime != null and params.UpdateTime != ''">
				and UpdateTime = #{params.UpdateTime} 
			</if>
			<if test="params.SeatId != null and params.SeatId != ''">
				and SeatId = #{params.SeatId} 
			</if>
		
		</where>
	</sql>

	<select id="count" resultType="int">
		select count(1) from screenseatinfo t
		<include refid="where" />
	</select>

	<select id="list" resultType="Screenseatinfo">
		select * from screenseatinfo t
		<include refid="where" />
		${params.orderBy}
		limit #{offset}, #{limit}
	</select>

	<update id="update">
		update screenseatinfo t
		<set>
			<if test="Id != null">
				Id = #{Id}, 
			</if>
			<if test="CinemaCode != null">
				CinemaCode = #{CinemaCode}, 
			</if>
			<if test="ScreenCode != null">
				ScreenCode = #{ScreenCode}, 
			</if>
			<if test="SeatCode != null">
				SeatCode = #{SeatCode}, 
			</if>
			<if test="GroupCode != null">
				GroupCode = #{GroupCode}, 
			</if>
			<if test="RowNum != null">
				RowNum = #{RowNum}, 
			</if>
			<if test="ColumnNum != null">
				ColumnNum = #{ColumnNum}, 
			</if>
			<if test="XCoord != null">
				XCoord = #{XCoord}, 
			</if>
			<if test="YCoord != null">
				YCoord = #{YCoord}, 
			</if>
			<if test="Status != null">
				Status = #{Status}, 
			</if>
			<if test="LoveFlag != null">
				LoveFlag = #{LoveFlag}, 
			</if>
			<if test="Type != null">
				Type = #{Type}, 
			</if>
			<if test="UpdateTime != null">
				UpdateTime = #{UpdateTime}, 
			</if>
			<if test="SeatId != null">
				SeatId = #{SeatId}, 
			</if>

		</set>

		where t.id = #{id}
	</update>

</mapper>
